<!--頭部共用導航-->
<%- include ../public/header.ejs %>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <!--左邊共用導航-->
            <%- include ../public/aslideleft.ejs %>
        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">商品管理</li>
                <li class="active">商品列表</li>
            </ol>
            <div class="panel panel-default">

			    <div class="panel-heading">修改商品</div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/product/doEdit" method="post" enctype="multipart/form-data">

                            <!--設定隱藏表單域來放id，這樣後端可以接收到id-->
                            <input type="hidden" name="_id" value="<%= list._id %>">
                            <input type="hidden" name="pic" value="<%= list.pic %>">


                            <ul>
                                <li>  商品名稱: <input type="text" name="title" value="<%= list.title %>" /></li>
                                <li>  商品圖片: <input type="file" name="pic"/>
                                    <br>
                                    &nbsp;&nbsp;&emsp;&emsp;&emsp;&emsp;<img src="/<%= list.pic %>" width="100" style="padding-top: 5px">
                                </li>
                                <li>  商品價格: <input type="text" name="price" value="<%= list.price %>"/></li>
                                <li>  商品運費: <input type="text" name="fee" value="<%= list.fee %>" /></li>
                                <li>
                                    商品描述:
                                    <textarea name="description" id="" cols="60" rows="8" ><%= list.description %></textarea>
                                </li>

                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default">送出</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

</body>
</html>
